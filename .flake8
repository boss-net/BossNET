[flake8]
max-line-length = 127
extend-ignore = E203, W503
exclude = .git,__pycache__,venv,env,.venv,.mypy_cache,.pytest_cache,build,dist
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py: F401
    # Allow try/except/pass in tests
    tests/*.py: S110
    # Allow assert in tests
    tests/*.py: S101
    # Allow magic numbers in tests
    tests/*.py: B007
