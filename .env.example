# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
WORKERS=1

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS (comma-separated list of origins, or * for all)
CORS_ORIGINS=["*"]

# Database Configuration (PostgreSQL)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=student_data_db

# SQLAlchemy
SQL_ECHO=True
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Testing
TESTING=False
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/test_student_data_db

# Email Settings (SMTP)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME="Bangladesh Education Data API"

# First Superuser
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# External API Keys (Optional)
# BANBEIS_API_KEY=your_banbeis_api_key
# BANBEIS_API_URL=https://api.banbeis.gov.bd
# EDU_BOARD_API_KEY=your_edu_board_api_key
# EDU_BOARD_API_URL=https://api.educationboard.gov.bd
# BBS_API_KEY=your_bbs_api_key
# BBS_API_URL=https://api.bbs.gov.bd
# DSHE_API_KEY=your_dshe_api_key
# DSHE_API_URL=https://api.dshe.gov.bd
# DPE_API_KEY=your_dpe_api_key
# DPE_API_URL=https://api.dpe.gov.bd

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_TRACKING_ID=your_analytics_id

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
