# Database Credentials
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=student_analytics_db

# API Keys for Data Sources
BANBEIS_API_KEY=your_banbeis_api_key
BANBEIS_API_URL=https://api.banbeis.gov.bd
EDU_BOARD_API_KEY=your_edu_board_api_key
EDU_BOARD_API_URL=https://api.educationboard.gov.bd

# BBS (Bangladesh Bureau of Statistics) API
BBS_API_KEY=your_bbs_api_key
BBS_API_URL=https://api.bbs.gov.bd

# DSHE (Directorate of Secondary and Higher Education)
DSHE_API_KEY=your_dshe_api_key
DSHE_API_URL=https://api.dshe.gov.bd

# DPE (Directorate of Primary Education)
DPE_API_KEY=your_dpe_api_key
DPE_API_URL=https://api.dpe.gov.bd

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Storage Configuration
STORAGE_TYPE=local  # or 's3', 'gcs', etc.
STORAGE_BUCKET=your_storage_bucket
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key

# Email Configuration (for reports and alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_TRACKING_ID=your_analytics_id

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
